.stage4 {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f0f4f8;
}

.stage4-header {
  background: linear-gradient(135deg, #00b4db 0%, #0083b0 100%);
  color: white;
  padding: 24px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.header-content h1 {
  margin: 0 0 8px 0;
  font-size: 36px;
  font-weight: bold;
}

.tagline {
  margin: 0;
  font-size: 16px;
  opacity: 0.9;
}

.my-account-button {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2px solid white;
  padding: 10px 20px;
  border-radius: 8px;
  cursor: pointer;
  font-size: 16px;
  font-weight: bold;
  transition: background 0.3s;
}

.my-account-button:hover {
  background: rgba(255, 255, 255, 0.3);
}

.stage4-content {
  flex: 1;
  padding: 40px 24px;
  max-width: 1200px;
  margin: 0 auto;
  width: 100%;
}

.search-section h2 {
  margin-bottom: 24px;
  color: #333;
  font-size: 28px;
}

.search-form {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 16px;
  margin-bottom: 48px;
}

.search-input {
  padding: 12px 16px;
  border: 2px solid #ddd;
  border-radius: 8px;
  font-size: 16px;
  transition: border-color 0.3s;
}

.search-input:focus {
  outline: none;
  border-color: #00b4db;
}

.search-button {
  padding: 12px 32px;
  background: linear-gradient(135deg, #00b4db 0%, #0083b0 100%);
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 16px;
  font-weight: bold;
  cursor: pointer;
  transition: transform 0.2s;
}

.search-button:hover {
  transform: translateY(-2px);
}

.deals-section h3 {
  margin-bottom: 24px;
  color: #333;
  font-size: 24px;
}

.deals-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 20px;
  margin-bottom: 40px;
}

.deal-card {
  background: white;
  border-radius: 12px;
  padding: 24px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s, box-shadow 0.3s;
}

.deal-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
}

.deal-route {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 12px;
}

.deal-price {
  font-size: 24px;
  color: #00b4db;
  font-weight: bold;
}

.hint-box {
  background: #fff3cd;
  border: 1px solid #ffc107;
  border-radius: 8px;
  padding: 16px;
  margin-top: 40px;
}

.hint-box p {
  margin: 0;
  color: #856404;
}

/* 退会ページ */
.unsubscribe-page {
  background: linear-gradient(135deg, #fc4a1a 0%, #f7b733 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40px 20px;
}

.unsubscribe-form-container {
  background: white;
  border-radius: 16px;
  padding: 48px;
  max-width: 700px;
  width: 100%;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
}

.unsubscribe-form-container h1 {
  font-size: 32px;
  color: #333;
  text-align: center;
  margin: 0 0 8px 0;
}

.subtitle {
  text-align: center;
  color: #666;
  margin: 0 0 32px 0;
}

.warning-box {
  background: #fff3cd;
  border-left: 4px solid #ffc107;
  padding: 20px;
  margin-bottom: 24px;
  border-radius: 4px;
}

.warning-box p {
  margin: 0 0 12px 0;
  color: #856404;
  font-weight: bold;
}

.warning-box ul {
  margin: 0;
  padding-left: 24px;
}

.warning-box li {
  margin: 8px 0;
  color: #856404;
}

.sneaky-option {
  background: #e8f5e9;
  border: 2px solid #4caf50;
  border-radius: 8px;
  padding: 20px;
  margin-bottom: 24px;
}

.checkbox-label {
  display: flex;
  align-items: flex-start;
  gap: 12px;
  cursor: pointer;
}

.checkbox-label input[type="checkbox"] {
  margin-top: 4px;
  width: 20px;
  height: 20px;
  cursor: pointer;
}

.checkbox-text {
  flex: 1;
  font-size: 16px;
  color: #333;
  line-height: 1.6;
}

.small-print {
  display: block;
  font-size: 12px;
  color: #999;
  margin-top: 4px;
}

.terms-section {
  margin-bottom: 32px;
}

.terms-section h3 {
  margin: 0 0 16px 0;
  color: #333;
}

.terms-box {
  background: #f5f5f5;
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 20px;
  max-height: 300px;
  overflow-y: auto;
  position: relative;
}

.terms-box p {
  margin: 12px 0;
  color: #666;
  font-size: 14px;
  line-height: 1.8;
}

.hidden-unsubscribe-link {
  background: none;
  border: none;
  color: #999;
  font-size: 11px;
  text-decoration: underline;
  cursor: pointer;
  padding: 4px;
  margin: 8px 0;
  display: inline-block;
  opacity: 0.4;
  transition: opacity 0.3s;
}

.hidden-unsubscribe-link:hover {
  opacity: 1;
  color: #d32f2f;
}

.fake-unsubscribe-button {
  width: 100%;
  padding: 16px 32px;
  background: linear-gradient(135deg, #00b4db 0%, #0083b0 100%);
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 18px;
  font-weight: bold;
  cursor: pointer;
  transition: transform 0.2s, box-shadow 0.2s;
  margin-bottom: 16px;
}

.fake-unsubscribe-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(0, 180, 219, 0.4);
}

.hint-text {
  font-size: 14px;
  color: #999;
  text-align: center;
  margin: 0;
}
