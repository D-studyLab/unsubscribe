.result-page {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
  padding: 20px;
}

.result-content {
  background: white;
  border-radius: 16px;
  padding: 48px;
  max-width: 700px;
  width: 100%;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
}

.result-title {
  font-size: 42px;
  font-weight: bold;
  margin: 0 0 12px 0;
  text-align: center;
  background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.result-subtitle {
  font-size: 18px;
  color: #666;
  text-align: center;
  margin: 0 0 40px 0;
}

.result-stats {
  background: #f7f7f7;
  border-radius: 12px;
  padding: 24px;
  margin-bottom: 32px;
}

.stat-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 0;
  border-bottom: 1px solid #e0e0e0;
}

.stat-item:last-child {
  border-bottom: none;
}

.stat-label {
  font-weight: bold;
  color: #666;
}

.stat-value {
  font-size: 20px;
  font-weight: bold;
  color: #11998e;
}

.result-message {
  margin-bottom: 32px;
  line-height: 1.8;
  padding: 20px;
  background: #fff8e1;
  border-left: 4px solid #ffc107;
  border-radius: 4px;
}

.result-message p {
  margin: 8px 0;
  color: #666;
}

.result-actions {
  display: flex;
  gap: 16px;
}

.share-button,
.play-again-button {
  flex: 1;
  padding: 16px 24px;
  border: none;
  border-radius: 8px;
  font-size: 16px;
  font-weight: bold;
  cursor: pointer;
  transition: transform 0.2s, box-shadow 0.2s;
}

.share-button {
  background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
  color: white;
}

.share-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(17, 153, 142, 0.4);
}

.play-again-button {
  background: white;
  border: 2px solid #11998e;
  color: #11998e;
}

.play-again-button:hover {
  background: #f0f0f0;
  transform: translateY(-2px);
}

.share-button:active,
.play-again-button:active {
  transform: translateY(0);
}
